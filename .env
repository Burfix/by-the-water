# ─── Application ──────────────────────────────────────────────────────────────
NODE_ENV=development
BACKEND_PORT=3001
FRONTEND_PORT=3000
APP_URL=http://localhost:3000
API_URL=http://localhost:3001

# ─── Database ─────────────────────────────────────────────────────────────────
DB_HOST=localhost
DB_PORT=5432
DB_USER=compliance_user
DB_PASSWORD=compliance_pass
DB_NAME=compliance_db

# ─── JWT ──────────────────────────────────────────────────────────────────────
JWT_SECRET=super-secret-jwt-key-by-the-water-compliance-2026
JWT_EXPIRES_IN=8h
JWT_REFRESH_SECRET=super-secret-refresh-key-by-the-water-compliance-2026
JWT_REFRESH_EXPIRES_IN=7d

# ─── AWS / S3-compatible Storage ──────────────────────────────────────────────
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=placeholder-key
AWS_SECRET_ACCESS_KEY=placeholder-secret
AWS_S3_BUCKET=compliance-audit-storage
AWS_S3_ENDPOINT=

# ─── Certificate Expiry ───────────────────────────────────────────────────────
CERT_EXPIRY_WARNING_DAYS=30
CERT_EXPIRY_CRITICAL_DAYS=7

# ─── Seed Admin ───────────────────────────────────────────────────────────────
SEED_ADMIN_EMAIL=admin@compliance.local
SEED_ADMIN_PASSWORD=Admin@1234!
SEED_ADMIN_FIRST_NAME=System
SEED_ADMIN_LAST_NAME=Administrator

# ─── CORS ─────────────────────────────────────────────────────────────────────
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ─── Swagger ──────────────────────────────────────────────────────────────────
SWAGGER_ENABLED=true
SWAGGER_PATH=api/docs

# ─── Rate Limiting ────────────────────────────────────────────────────────────
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# ─── Next.js Public ───────────────────────────────────────────────────────────
NEXT_PUBLIC_API_URL=http://localhost:3001/api/v1
